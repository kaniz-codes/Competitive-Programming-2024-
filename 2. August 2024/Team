#include <iostream>
using namespace std;
int main() 
{
    int n,i,j,a[3],count=0;
    cin>>n;
    for(i=0;i<n;i++)
    {
        for(j=0;j<3;j++)
        {
            cin>>a[j];
            
        }
        if(a[0]+a[1]+a[2]>=2)
        {
            count++;
        }
    }
    cout<<count<<endl;
    return 0;
}
