#include <stdio.h>
int main() 
{
    int t,i,n,j;
    scanf("%d",&t);
    for(i=0; i<t; i++) 
    {   scanf("%d", &n);
        int total_rooms=0;
        for(j=0; j<n; j++)
        {   
            int students;
            scanf("%d", &students);
            total_rooms += (students + 1) / 2;
        }
        printf("%d\n", total_rooms);
    }
    return 0;
}
